upstream app_server {
    server localhost:{{ wsgi_server_port }}
    fail_timeout=0;
}

server {
    listen 90;
    server_name 	{{ server_ip }}
    access_log 	/home/{{ deployer_user }}/logs/{{ app_name }}/nginx-access.log;
    error_log  	/home/{{ deployer_user }}/logs/{{ app_name }}/nginx-error.log info;

    keepalive 15;

    # static files path
    location /static {
        autoindex 	on;
        alias 		{{ app_dir }}/staticfiles/;
        access_log 	off;
        log_not_found	off;
        expires 	30d;
    }

    location /robots.txt {
        root 		{{ app_dir }}/static;
        access_log 	off;
        log_not_found 	off;
    }

    location /favicon.ico {
        root		{{ app_dir }}/static/img;
        access_log	off;
        log_not_found 	off;
    }

    location / {
        proxy_set_header    X-Forwarded-For   	$proxy_add_x_forwarded_for
	proxy_set_header    Host		$http_host
	proxy_redirect	    off;

	if (!-f $request_filename) {
	    proxy_pass http://app_server
            break;
        }
    }
}
